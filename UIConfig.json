{
  "page": {
    "label": "TRANSLATE.UI.CONFIG"
  },
  "sections": [
    {
      "id": "device_control",
      "element": "section",
      "label": "TRANSLATE.UI.CHECK_DEVICE",
      "icon": "fa-cogs",
      "description": "",
      "content": [
        {
          "id": "check_device",
          "element": "button",
          "label": "TRANSLATE.UI.CHECK_DEVICE",
          "onClick": {
            "type": "emit",
            "message": "callMethod",
            "data": {
              "endpoint": "miscellanea/es9018k2m_ctl",
              "method": "execDeviceCheckControl",
              "data": ""
            }
          }
        },
        {
          "id": "init_device",
          "element": "button",
          "label": "TRANSLATE.UI.DEFAULT_VALUE",
          "onClick": {
            "type": "emit",
            "message": "callMethod",
            "data": {
              "endpoint": "miscellanea/es9018k2m_ctl",
              "method": "execLoadDefaultControl",
              "data": ""
            }
          }
        }
      ]
    },
    {
      "id": "volume_control",
      "element": "section",
      "label": "TRANSLATE.UI.VOLUME",
      "icon": "fa-cogs",
      "onSave": {
        "type": "controller",
        "endpoint":"miscellanea/es9018k2m_ctl",
        "method":"execVolumeControl"
      },
      "saveButton": {
        "label": "TRANSLATE.UI.SAVE",
        "data": [
          "volume_adjust", "ready"
        ]
      },
      "content": [
        {
          "id": "volume_adjust",
          "element": "equalizer",
          "label": "TRANSLATE.UI.VOLUME",
          "description": "",
          "config": {
            "orientation": "horizontal",
            "bars": [
              {
                "min": 0,
                "max": 100,
                "step": 1,
                "value": 60,
                "tooltip":"always"
              }
            ]
          }
        },
        {
          "id": "ready",
          "element": "switch",
          "label": "TRANSLATE.UI.MUTE_ON_OFF",
          "value": true
        }
      ]
    },

    {
      "id": "balance_control",
      "element": "section",
      "label": "TRANSLATE.UI.BALANCE",
      "icon": "fa-cogs",
      "description": "balance menu",
      "onSave": {
        "type": "controller",
        "endpoint":"miscellanea/es9018k2m_ctl",
        "method":"execBalanceControl"
      },
      "saveButton": {
        "label": "TRANSLATE.UI.SAVE",
        "data": [
          "balance_adjust"
        ]
      },
      "content": [
        {
          "id": "balance_adjust",
          "element": "equalizer",
          "label": "TRANSLATE.UI.BALANCE_ADJUST",
          "description": "",
          "config": {
            "orientation": "horizontal",
            "bars": [
              {
                "min": -29,
                "max": 29,
                "step": 1,
                "value": 0,
                "tooltip":"always"
              }
            ]
          }
        },
        {
          "id": "balance_reset",
          "element": "button",
          "label": "TRANSLATE.UI.BALANCE_RESET",
          "onClick": {
            "type": "emit",
            "message": "callMethod",
            "data": {
              "endpoint": "miscellanea/es9018k2m_ctl",
              "method": "resetBalanceCtl",
              "data": ""
            }
          }
        }
      ]
    },

    {
      "id": "digital_filter_control",
      "element": "section",
      "label": "TRANSLATE.UI.DIGITAL_FILTER",
      "icon": "fa-cogs",
      "description": "FIR, IIR, deemphasis_filter",
